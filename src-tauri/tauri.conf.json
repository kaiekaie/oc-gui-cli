{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../build"
  },
  "package": {
    "productName": "oc-gui",
    "version": "0.1.5"
  },

  "tauri": {
    "allowlist": {
      "window": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["$LOCALDATA/*"]
      },
      "shell": {
        "all": true,
        "execute": true,
        "sidecar": true,
        "open": true,
        "scope": [
          {
            "name": "run-oc",
            "cmd": "oc",
            "args": true
          }
        ]
      }
    },
    "windows": [
      {
        "title": "oc-gui",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri-app.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
